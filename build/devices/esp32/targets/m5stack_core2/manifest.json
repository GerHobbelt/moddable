{
	"include": [
		"$(MODDABLE)/modules/drivers/ili9341/manifest.json",
		"$(MODDABLE)/modules/drivers/ft6206/manifest.json",
		"$(MODDABLE)/modules/drivers/axp192/manifest.json",
		"$(MODDABLE)/modules/pins/i2c/manifest.json",
		"$(MODDABLE)/modules/pins/pwm/manifest.json"
	],
	"config": {
		"screen": "ili9341",
		"touch": "",
		"backlight": 18,
		"brightness": 100
	},
	"defines": {
		"i2c":{
			"sda_pin": 21,
			"scl_pin": 22
		},
		"spi": {
			"mosi_pin": 23,
			"miso_pin": 38,
			"sck_pin": 18
		},
		"ili9341": {
			"hz": 40000000,
			"cs_pin": 5,
			"dc_pin": 15,
			"spi_port": "VSPI_HOST",
		},
		"audioOut": {
			"bitsPerSample": 16,
			"numChannels": 1,
			"sampleRate": 11025,
			"volume_divider": 1,
			"i2s": {
				"DAC": 1,
				"DAC_CHANNEL": 1,
				"bitsPerSample": 16,
			}
		}
	},
	"modules": {
		"*": [
			"$(MODULES)/pins/digital/monitor/*",
			"$(MODULES)/pins/digital/monitor/esp32/*",
			"$(MODULES)/drivers/mpu6050/*"
		],
		"pins/audioout": "$(MODULES)/pins/i2s/*",
		"setup/target": "./setup-target",
		"pins/smbus": "$(MODULES)/pins/smbus/smbus"
	},
	"preload": [
		"monitor",
		"pins/audioout",
		"setup/target",
		"mpu6050",
		"pins/smbus"
	],
	"resources": {
		"*": "$(MODDABLE)/examples/assets/sounds/bflatmajor",
	},
}

